generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// ----------------- USERS -----------------
model User {
  id        Int      @id @default(autoincrement())
  clerkId   String?  @unique
  email     String?  @unique
  name      String?
  createdAt DateTime @default(now())

  // Relations
  monitors      Monitor[] // one-to-many: User -> Monitor
  subscriptions Subscription[] // one-to-many: User -> Subscription
  statusPages   StatusPage[] // one-to-many: User -> StatusPage

  @@index([clerkId])
}

/// ----------------- MONITORS -----------------
model Monitor {
  id        Int      @id @default(autoincrement())
  userId    Int
  name      String
  url       String
  isHttps   Boolean  @map("https")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relations
  user            User                @relation(fields: [userId], references: [id])
  history         HistoryLog[]         // one-to-many: Monitor -> HistoryLog
  statusPages     StatusPageMonitor[] // many-to-many: Monitor -> StatusPage

  @@index([userId])
}

/// ----------------- SUBSCRIPTIONS / PLANS -----------------
enum Plan {
  FREE
  PRO
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELLED
  EXPIRED
  TRIALING
}

model Subscription {
  id        Int                @id @default(autoincrement())
  userId    Int
  plan      Plan
  status    SubscriptionStatus @default(ACTIVE)
  startedAt DateTime           @default(now())
  expiresAt DateTime? // null for non-expiring
  metadata  Json?
  createdAt DateTime           @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([plan])
  @@index([status])
}

/// ----------------- HISTORY LOGS -----------------
model HistoryLog {
  id          Int      @id @default(autoincrement())
  monitorId   Int
  pingMs      Int? // response time in ms
  statusCode  Int? // HTTP status code if available
  isUp        Boolean
  bodySnippet String? // short snippet or error message
  createdAt   DateTime @default(now())

  monitor Monitor @relation(fields: [monitorId], references: [id])

  @@index([monitorId, createdAt])
  @@index([createdAt])
}

/// ----------------- STATUS PAGES -----------------
model StatusPage {
  id          Int      @id @default(autoincrement())
  userId      Int
  name        String   // Status page name/title
  slug        String   @unique // URL slug for public access
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user     User                @relation(fields: [userId], references: [id])
  monitors StatusPageMonitor[] // many-to-many: StatusPage -> Monitor

  @@index([userId])
  @@index([slug])
}

model StatusPageMonitor {
  id          Int       @id @default(autoincrement())
  statusPageId Int
  monitorId   Int
  displayOrder Int      @default(0) // Order in which monitors appear
  createdAt   DateTime  @default(now())

  statusPage StatusPage @relation(fields: [statusPageId], references: [id], onDelete: Cascade)
  monitor    Monitor    @relation(fields: [monitorId], references: [id], onDelete: Cascade)

  @@unique([statusPageId, monitorId])
  @@index([statusPageId])
  @@index([monitorId])
}
